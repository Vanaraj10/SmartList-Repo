# MongoDB connection string
# Get this from MongoDB Atlas or use local MongoDB
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Port for the backend server
PORT=5000

# Deployment URLs for keep-alive (optional)
# Set this to your deployed app URL for Render
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# Set this to your deployed app URL for Heroku
HEROKU_APP_URL=https://your-app-name.herokuapp.com
